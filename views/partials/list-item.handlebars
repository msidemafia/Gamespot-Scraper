<li>
    <div class="card">
        <div class="card-header">
            <a href={{link}} target="_blank">
                <h3>{{title}}</h3>
            </a>
        </div>
        <div class="card-body">
            <p class="card-text summary-text">{{summary}}</p>
            <hr>
            <p>Comments:</p>
            <p class="card-text note-text">{{note.body}}</p>
            <a class="btn btn-primary note-button" data-id={{_id}}>Add Comment</a>
            <a class="btn btn-primary delete-button" data-id={{_id}}>Delete Article</a>
        </div>
    </div>
</li>